{
    "compilerOptions": {
        "outDir": "./dist/",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },

        "noImplicitAny": true,
        "sourceMap": true,
        "module": "es6",
        "target": "es5",
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "checkJs": true,
        "esModuleInterop": true
    },

    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}
